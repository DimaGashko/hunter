doctype html
html
   head
      block head
         title Hunter
         
         meta(charset="utf-8") 
         meta(name="viewport", content="width=device-width, initial-scale=1") 
         link(rel="shortcut icon", href="favicon.png", type="image/png")       

         //build:js js/main.js defer
         script(defer, src="js/functions.js")
         script(defer, src="js/sprites_config.js")

         script(defer, src="js/events.js")

         script(defer, src="js/game/game.js")

         script(defer, src="js/game/geometry/vector.js")
         script(defer, src="js/game/geometry/rect.js")

         script(defer, src="js/game/sprite.js")

         script(defer, src="js/game/render.js")
         script(defer, src="js/game/camera.js") 

         script(defer, src="js/game/physics/gravity.js")
         script(defer, src="js/game/physics/collisions.js")
         script(defer, src="js/game/physics/world_borders.js") 

         script(defer, src="js/game/map_manager.js")
         script(defer, src="js/game/map_parser.js")
         script(defer, src="js/game/level.js")

         script(defer, src="js/game/objects/block.js")
         script(defer, src="js/game/objects/dinamic_block.js")

         script(defer, src="js/game/objects/lava.js")

         script(defer, src="js/game/objects/actor.js")
         script(defer, src="js/game/objects/dinamic_actor.js")

         script(defer, src="js/game/objects/platform.js")

         script(defer, src="js/game/objects/persons/sprinter.js")
         script(defer, src="js/game/objects/persons/steve.js")

         script(defer, src="js/game/objects/coin.js")

         script(defer, src="js/game/objects/finish.js")

         script(defer, src="js/game/player.js")
         script(defer, src="js/game/health.js")

         script(defer, src="js/fps_meter.js")

         script(defer, src="js/main.js")

         //endbuild
     
   body
      .wrapper
         header.header
            //-include components/header.jade
         main.main
            .game
               .game__canvases
                  canvas.game__canvas.game__main_canv   
               .game__dom 
                  .fps 0

                  .health 
                     .health__prev
                     .health__real

                  .game__controls
                     .game__move_buttons
                        button.game__move.game__move_left <=
                        button.game__move.game__move_right =>

                  .game__statuses  
                     .coins
                        .coins__label Собрано предметов:
                        .coins__val 0/0 

                  .open_menu Menu 

               .menu
                  .menu__content
                     header.menu__header
                        .menu__title Hunter

                     main.menu__main
                        .menu__buttons
                           button.menu__button.game__resume Продолжить
                           button.menu__button.game__level_restart Начать уровень сначала
                           button.menu__button.game__game_restart Начать игру сначала

                     footer.menu__footer

               .won
                  .won__content
                     header.won__header
                        .won__title Вы победили!

                     main.won__main
                        .won__buttons
                           button.won__button.game__resume Продолжить
                           button.won__button.game__game_restart Начать игру сначала
                           button.won__button.game__open_secret_level Секретный уровень

                     footer.won__footer

            .early_on_finish Соберите все предметы

         .footer
            //-include components/footer.jade
               
                  
   //build:css css/main.css
   link(rel="stylesheet", href="css/lib/normalize.min.css")
   link(rel="stylesheet", href="css/main.css")
   //endbuild 