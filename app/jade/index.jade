doctype html
html(lang="ru")
   head     
      include components/meta.jade   

      //build:css css/main.css
      link(rel="stylesheet", href="css/lib/normalize.min.css")
      link(rel="stylesheet", href="css/main.css")
      //endbuild 

      include components/analytics.jade  

   body
      .wrapper
         header.header
            //-include components/header.jade
         main.main
            .game
               include components/instruction.jade  

               .game__canvases
                  canvas.game__canvas.game__main_canv   
               .game__dom 

                  .health 
                     .health__prev
                     .health__real
 
                  .game__controls 
                     .game__move_buttons
                        button.game__move.game__move_left Left
                        button.game__move.game__move_right Right

                  .game__statuses  
                     .status
                        .status__label Собрано предметов:
                        .status__val.coins_progress 0/0 
                     .status
                        .status__label Уровень:
                        .status__val.level_progress 0/0

                     .status
                        .status__label fps:
                        .status__val.fps 0

                  button.open_menu Menu 

               include components/menu.jade
               include components/won.jade
